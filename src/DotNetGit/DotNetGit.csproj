<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>

    <AssemblyName>git</AssemblyName>
    <RootNamespace>DotNetGit</RootNamespace>

    <!--<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>-->
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>dotnet-git</PackageId>
    <PackageVersion>0.1.2-pre</PackageVersion>

    <Author>kzu</Author>
    <Description>A dotnet global tool providing a text-based UI for Git</Description>

    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/kzu/dotnet-git</PackageProjectUrl>

    <IsTool>true</IsTool>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>git</ToolCommandName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Terminal.Gui" Version="0.24.0" />
  </ItemGroup>

</Project>