<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>

    <AssemblyName>git</AssemblyName>
    <RootNamespace>DotNetGit</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>dotnet-git</PackageId>

    <Author>kzu</Author>
    <Description>A dotnet global tool providing a text-based UI for Git</Description>

    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/kzu/dotnet-git</PackageProjectUrl>

    <IsTool>true</IsTool>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>git</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitInfo" Version="2.0.20" PrivateAssets="all" />
    <PackageReference Include="Terminal.Gui" Version="0.24.0" PrivateAssets="all" />
    <PackageReference Include="MSBuilder.ThisAssembly.Metadata" Version="0.1.4" PrivateAssets="all" />
  </ItemGroup>

</Project>